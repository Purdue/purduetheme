{% include directory ~ '/partials/header.html.twig' %}

<main role="main">
  <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

  <div class="layout-content">
    <div class="article-list">
      <div class="container">
        <div class="columns">
          <div class="column {% if page.sidebar-right %} is-8 {% endif %}">
            {{ page.content }}
          </div>
          {% if page.sidebar_right %}
            <div class="column is-4 home_right article_right">
              {{ page.sidebar_right }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>{# /.layout-content #}
  <div class="below-content">
    {{ page.below_content }}
  </div>

</main>

{% include directory ~ '/partials/footer.html.twig' %}
